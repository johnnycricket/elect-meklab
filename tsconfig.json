{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "checkJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": ".vite/build",
    "moduleResolution": "node",
    "resolveJsonModule": true
  },
  "include": ["src/**/*.d.ts", "src/**/*.ts", "src/**/*.js", "src/**/*.svelte", "vite.main.config.js", "vite.preload.config.js", "vite.renderer.config.js", "tsconfig.json", "notaforgeconfig.ts", "svelte.config.mjs"],
  "exclude": ["node_modules"]
}
